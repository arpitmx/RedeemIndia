    <!--        />-->

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background_grey"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/popinsemibold"
                android:gravity="start"
                android:paddingTop="10dp"
                android:text="Details"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:gravity="center_vertical"
                android:hint="First name"
                android:inputType="text"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/et_size" />

            <EditText
                android:id="@+id/mname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:gravity="center_vertical"
                android:hint="Middle name (Optional)"
                android:inputType="textPersonName"

                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/et_size" />


            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:ems="10"

                android:fontFamily="@font/popinregular"
                android:hint="Last name"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/et_size" />

            <EditText
                android:id="@+id/Accesscode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:ems="10"
                android:fontFamily="@font/popinregular"
                android:hint="Access code (4 digit)"
                android:inputType="phone"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/darkGrey"
                android:textColorHint="@color/darkGrey70"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/et_size" />





            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_size"
                android:ems="10"
                android:inputType="date"
                android:background="@drawable/card_background_white"
                android:drawableStart="@drawable/ic_baseline_verified_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/darkGrey70"
                android:hint="Date of Birth"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                />


            <Button
                android:id="@+id/submit"
                android:layout_width="300dp"
                android:layout_height="@dimen/edit_text_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_background_white"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:fontFamily="@font/popinsemibold"
                android:text="Send otp"
                android:textAllCaps="false"
                android:textColor="@color/white30"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
